<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:padding="15dp"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/start"
        android:layout_width="210dp"
        android:layout_height="27dp"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/ic_my_location_black_24dp"
        android:drawablePadding="10dp"
        android:minLines="1"
        android:paddingTop="5dp"
        android:text="TextView"
        android:textColor="@color/bg_login"
        android:textSize="18dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/nickname"
        app:layout_constraintRight_toRightOf="@+id/nickname"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/destination"
        android:layout_width="210dp"
        android:layout_height="27dp"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        android:drawablePadding="10dp"
        android:minLines="1"
        android:text="TextView"
        android:textColor="@color/bg_login"
        android:textSize="18dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintRight_toRightOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/start"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/time"
        android:layout_width="210dp"
        android:layout_height="27dp"
        android:layout_marginTop="66dp"
        android:drawableLeft="@drawable/ic_timer_black_24dp"
        android:drawablePadding="10dp"
        android:minLines="1"
        android:text="TextView"
        android:textSize="17dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/nickname"
        app:layout_constraintRight_toRightOf="@+id/nickname"
        app:layout_constraintTop_toBottomOf="@+id/nickname"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="210dp"
        android:layout_height="27dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="6dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="10dp"
        android:minLines="1"
        android:text="TextView"
        android:textColor="@color/bg_login"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/start"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintLeft_toRightOf="@+id/imageBoard"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.454"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/imageBoard"
        android:layout_width="93dp"
        android:layout_height="89dp"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/time"
        android:layout_marginTop="10dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nickname"
        android:layout_marginLeft="16dp"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>